@model RealBlog.Models.ViewModel.LoginViewModel

@{
    ViewBag.Title = "Авторизация";
}

<div class="panel panel-info tiny-panel">

    <div class="panel panel-heading">
        Авторизация
    </div>

    <div class="panel-body">
        @using (Html.BeginForm("Login", "Home", FormMethod.Post))
        {
            <form>

                <div class="form-group">
                    @Html.LabelFor(model => model.Login)
                    @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control" } })
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Password)
                    @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", type = "Password" } })
                </div>

                <div class="form-group form-check">
                    @Html.CheckBoxFor(model => model.RememberMe, new { htmlAttributes = new { @class = "form-control " } })
                    @Html.LabelFor(model => model.RememberMe)
                </div>

                <div>
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn button-gray btn-block">Войти</button>

            </form>
        }
    </div>
</div>

<div class="tiny-panel">
    Нет аккаунта?
    @Html.ActionLink("Зарегистрироваться", "Index", "Register",
        null, htmlAttributes: new { @class = "btn button-grey", @role = "button" })
</div>